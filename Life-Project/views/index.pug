extends layout

block body
  - let imgUrl;
  nav  
    a(href="/") Início 
    a(href="/menu") Cardápio
    div.user-info 
      img(src="../stylesheets/images/login.png")
  main 
    article.offer  
      each food in foods 
       - imgUrl = food.englishName.toLowerCase();
       - modifiedUrl = "";
         each v, i in imgUrl 
           if v == " "
             - modifiedUrl  += "-"
           else
             - modifiedUrl += v.toLowerCase() 
       div(class=`offer-${modifiedUrl}`)
         img.offer(src=`../stylesheets/images/${modifiedUrl}.png`)
         button() saiba mais
         img(src="../stylesheets/images/arrow-left.png")
         img(src="../stylesheets/images/arrow-right.png")
    article.food-suggestions  
      each type in types
        div(class=`food-suggestion-${type.englishName.toLowerCase()}`)
          - var modifiedUrl = "";
          - imgUrl = type.englishName
          each v, i in imgUrl 
            if v == " "
              - modifiedUrl  += "-"
            else
              - modifiedUrl += v.toLowerCase()
          img.suggestion(src=`../stylesheets/images/${modifiedUrl}.png`)
          form(method="POST")  
            input(type="hidden" name="type-url" value=type.url)
            button(type="submit") Ver mais
          img(src="../stylesheets/images/arrow-left.png")
          img(src="../stylesheets/images/arrow-right.png")
  footer  
    div.logo  
    div.user-politics  
      each politic in politics 
        a(href=politic.url)= politic.name  
    div.hr-conteiner
      hr 
    p= shareText
    div.share 
      each socialMedia in socialMedias
        a.share(href=socialMedia.url)
          - socialMediaName = "";
          each v in socialMedia.name
            if v == " "
              - socialMediaName +="-"
            else 
              - socialMediaName += v.toLowerCase()
          img(src=`../stylesheets/images/${socialMediaName}-logo.${socialMedia.iconFormat}`)
    div#image-rights  
      p Todos os direitos reservados