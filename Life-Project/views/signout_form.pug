extends layout

block body 
  main.signout-form
    h1 Deseja mesmo encerrar a sessão? 
    div
      form(method='POST') 
        input(type='hidden' name='ans' value='yes')
        button.accept-end-session(type='submit') SIM
      form(method='POST') 
        input(type='hidden' name='ans' value='not')
        button.recuse-end-session(type='submit') NÃO